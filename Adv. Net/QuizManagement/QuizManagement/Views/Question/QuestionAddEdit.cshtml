@model QuizManagement.Models.QuestionModel


<main id="main" class="main">
    <div class="container">
        <div class="pagetitle">
            <h1>Question Add</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="DashboardView">Home</a></li>
                    <li class="breadcrumb-item">Question</li>
                    <li class="breadcrumb-item active"><a asp-controller="Question" asp-action="QuestionAdd">QuestionAdd</a></li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add New Question </h5>
                <form class="row g-3" asp-controller="Question" asp-action="QuestionSave" method="post">
                    <input hidden asp-for="QuestionID" />
                    <div class="col-12">
                        <label for="inputquesation4" asp-for="QuestionText" class="form-label"><span class="text-danger">*</span>Question text</label>
                        <input type="text" asp-for="QuestionText" class="form-control" id="inputquesation4" placeholder="Enter Question Text">
                        <span asp-validation-for="QuestionText" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label for="inputOptionA4" asp-for="OptionA" class="form-label"><span class="text-danger">*</span>Option A </label>
                        <input type="text" asp-for="OptionA" class="form-control" id="inputOptionA4" placeholder="Enter Option A">
                        <span asp-validation-for="OptionA" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label for="inputOptionB4" asp-for="OptionB" class="form-label"><span class="text-danger">*</span>Option B </label>
                        <input type="text" asp-for="OptionB" class="form-control" id="inputOptionB4" placeholder="Enter Option B">
                        <span asp-validation-for="OptionB" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label for="inputOptionC4" asp-for="OptionC" class="form-label"><span class="text-danger">*</span>Option C </label>
                        <input type="text" asp-for="OptionC" class="form-control" id="inputOptionC4" placeholder="Enter Option C">
                        <span asp-validation-for="OptionC" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label for="inputOptionD4" asp-for="OptionD" class="form-label"><span class="text-danger">*</span>Option D </label>
                        <input type="text" asp-for="OptionD" class="form-control" id="inputOptionD4" placeholder="Enter Option D">
                        <span asp-validation-for="OptionD" class="text-danger"></span>
                    </div>
                    
                    <div class="col-12">
                        <label for="inputQuestionsMark4" asp-for="QuestionMarks" class="form-label"><span class="text-danger">*</span>Question Mark</label>
                        <input type="number" asp-for="QuestionMarks" class="form-control" id="inputQuestionsMark4">
                        <span asp-validation-for="QuestionMarks" class="text-danger"></span>
                    </div>

                    <div class="col-6">
                        <label for="inputState" asp-for="CorrectOption" class="form-label"><span class="text-danger">*</span>Correct Option</label>
                        <select id="inputState" class="form-select" asp-for="CorrectOption">
                            <option selected disabled>Select Correct Option</option>
                            <option>Option A</option>
                            <option>Option B</option>
                            <option>Option c</option>
                            <option>Option D</option>
                        </select>
                        <span asp-validation-for="CorrectOption" class="text-danger"></span>

                    </div>
                   
                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label class="form-label">User Name</label>
                        <select asp-for="UserID" class="form-select">
                            <option value=""> Select User Name </option>
                            @foreach (var level in ViewBag.User)
                            {
                                <option value="@level.UserID">@level.UserName</option>
                            }
                        </select>
                        <span asp-validation-for="UserID" class="text text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label class="form-label">Question Level</label>
                        <select asp-for="QuestionLevelID" class="form-select">
                            <option value=""> Select Level </option>
                            @foreach (var level in ViewBag.QuestionLevel)
                            {
                                <option value="@level.QuestionLevelID">@level.QuestionLevel</option>
                            }
                        </select>
                        <span asp-validation-for="QuestionLevelID" class="text text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-secondary" asp-controller="Question" asp-action="QuestionList">Cancel</a>
                    </div>
                </form><!-- Vertical Form -->
            </div>
        </div>
    </div>
</main>
