@model QuizManagement.Models.QuizModel 

<main id="main" class="main">
    <h3>
        <span class="text-danger">@TempData["ErrorMessage"]</span>
    </h3>
    <div class="pagetitle">
        <h1>Quiz</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item active">Quiz</li>
                <li class="breadcrumb-item active">Quiz Add</li>
            </ol>
        </nav>
    </div>

    <div class="container">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add New Quiz</h5>
                <form class="row g-3" asp-controller="Quiz" asp-action="QuizSave" method="post">
                     <input type="hidden" asp-for="QuizID" /> 
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label"><span class="text-danger">*</span> User</label>
                        <div class="col-sm-10">
                            <select asp-for="UserID" class="form-select">
                                <option> Select User </option>
                                @if (ViewBag.User != null)
                                {
                                    foreach (var user in ViewBag.User)
                                    {
                                        <option value="@user.UserID">@user.UserName</option>
                                    }
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="UserID"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="QuizName" class="col-sm-2 col-form-label"><span class="text-danger">*</span> Quiz Name</label>
                        <div class="col-sm-10">
                            <input asp-for="QuizName" class="form-control" placeholder="Enter Quiz Name">
                            <span asp-validation-for="QuizName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="QuizDate" class="col-sm-2 col-form-label"><span class="text-danger">*</span> Quiz Date</label>
                        <div class="col-sm-10">
                            <input asp-for="QuizDate" type="date" class="form-control">
                            <span asp-validation-for="QuizDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="TotalQuestions" class="col-sm-2 col-form-label"><span class="text-danger">*</span> Total Questions</label>
                        <div class="col-sm-10">
                            <input asp-for="TotalQuestions" type="number" class="form-control" placeholder="0">
                            <span asp-validation-for="TotalQuestions" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="text-start">
                        <button type="submit" class="btn btn-success me-2">Save</button>
                        <button type="reset" class="btn btn-warning">Reset</button>
                        <a class="btn btn-danger" asp-controller="Quiz" asp-action="QzList">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


