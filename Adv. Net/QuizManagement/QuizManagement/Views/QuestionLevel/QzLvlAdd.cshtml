@model QuizManagement.Models.QuestionLevelModel

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Question Level</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item">Question Level</li>
                <li class="breadcrumb-item active">Question Level Add</li>
            </ol>
        </nav>
    </div>

    <div class="container">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add New Question </h5>
                <form class="row g-3" asp-controller="QuestionLevel" asp-action="QuestionLevelSave" method="post">
                    <input hidden asp-for="QuestionLevelID" />
                    <div class="mb-3 row">
                        <label for="inputQuestionLevel" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Question Level</label>
                        <div class="col-sm-10">
                            <select asp-for="QuestionLevel" id="inputQuestionLevel" class="form-select" placeholder="Select Level">
                                <option value="" disabled selected>Select Level</option>
                                <option>Easy</option>
                                <option>Medium</option>
                                <option>Hard</option>
                                <option>Expert</option>
                            </select>
                            <span asp-validation-for="QuestionLevel" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="inputUserId" class="col-sm-2 col-form-label"><span class="text-danger">*</span>User Id</label>
                        <div class="col-sm-10">
                            <input asp-for="UserID" type="number" class="form-control" id="inputUserId" placeholder="Enter User Id">
                            <span asp-validation-for="UserID" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-secondary" asp-controller="QuestionLevel" asp-action="QzLvlList">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}